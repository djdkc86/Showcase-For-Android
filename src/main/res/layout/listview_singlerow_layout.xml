<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF212121"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1">

    <!--Activity Name Label -->
    <TextView
        android:id="@+id/TextView_Title_ListView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff2063ff"
        android:textSize="35sp"
        android:text="@string/activity_title" />

    <!--Activity Location Label -->
    <TextView
        android:id="@+id/TextView_Location_ListView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffd9d9d9"
        android:textSize="30sp"
        android:text="@string/activity_location"
        android:layout_below="@+id/TextView_Title_ListView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Activity Image Count Label -->
    <TextView
        android:id="@+id/TextView_ImageCount_ListView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff5e5e5e"
        android:textSize="20sp"
        android:text="@string/image_count"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/TextView_Location_ListView2"
        android:paddingLeft="50dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/TextView_Location_ListView2"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/TextView_Title_ActivityDetailLayout"
        android:layout_alignEnd="@+id/TextView_Title_ActivityDetailLayout" />

    <TextView
        android:id="@+id/TextView_Description_ListView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a short description..."
        android:textSize="20sp"
        android:paddingBottom="10dp"
        android:textColor="#ffd9d9d9"
        android:layout_below="@+id/TextView_ImageCount_ListView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>